<% if user_signed_in? %>
  <h3><%= current_user.department.name %><%= current_user.email %>のアカウント</h3>
  <div class="tab-menu">
    <ul>
      <li id="left" class="selected">前期</li>
      <li id="right">後期</li>
    </ul>
    <div class="contents">
      <div class="left">
        <table class="topTimetable">
          <% piriod = 0%>
          <tr>
            <th></th>
            <th>月曜</th>
            <th>火曜</th>
            <th>水曜</th>
            <th>木曜</th>
            <th>金曜</th>
            <th>土曜</th>
          <tr>
          <% while piriod <= 5 do %>
            <% wday = 0 %>
              <tr>
                <td>
                  <%= piriod+1 %>
                </td>
                <% while wday<= 5 do %>
                  <% if Lesson.find_by(piriod: piriod, wday: wday, term_id: [1,3]).present? && Lesson.find_by(piriod: piriod, wday: wday, term_id: [1,3]).lesson_users.exists?(user_id: current_user.id) %>
                    <% lesson = Lesson.find_by(piriod: piriod, wday: wday, term_id: [1, 3]) %>
                    <td class=persent><%= link_to lesson.name, lesson_path(lesson) %></td>
                  <% else %>
                    <td><%= link_to"", new_top_path(wday: wday, piriod: piriod, term_id: 1) %></td>
                  <% end %>
                <% wday = wday + 1 %>
                <% end %>
              </tr>
            <% piriod = 1 + piriod %>
          <% end %>
        </table>
      </div>
      <div class="right">
        <table class="topTimetable">
          <% piriod = 0%>
          <tr>
            <th></th>
            <th>月曜</th>
            <th>火曜</th>
            <th>水曜</th>
            <th>木曜</th>
            <th>金曜</th>
            <th>土曜</th>
          <tr>
          <% while piriod <= 5 do %>
            <% wday = 0 %>
              <tr>
                <td>
                  <%= piriod+1 %>
                </td>
                <% while wday<= 5 do %>
                  <% if Lesson.find_by(piriod: piriod, wday: wday, term_id: [2,3]).present? && Lesson.find_by(piriod: piriod, wday: wday, term_id: [2,3]).lesson_users.exists?(user_id: current_user.id) %>
                    <% lesson = Lesson.find_by(piriod: piriod, wday: wday, term_id: [2,3]) %>
                    <td class=persent><%= link_to lesson.name, lesson_path(lesson) %></td>
                  <% else %>
                    <td><%= link_to"", new_top_path(wday: wday, piriod: piriod, term_id: 2) %></td>
                  <% end %>
                <% wday = wday + 1 %>
                <% end %>
              </tr>
            <% piriod = 1 + piriod %>
          <% end %>
        </table>
      </div>
    </div>
  </div>
  <% a = 0 %>
  <% current_user.lessons.each do |lesson| %>
    <% a = lesson.unit + a %>
  <% end %>
  <h4>計<%= a %>単位</h4>
<% else %>
  <h3>ログインしてください</h3>
<% end %>

